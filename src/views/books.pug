include ./partials/head 

.add-a-book
  button.btn.btn-default.addBook Add Book
    span.glyphicon.glyphicon-plus.plus
form.form-group(class='form-horizontal', method='post', action='/book/add')
  .modal.fade(tabindex='-1', role='dialog')
  .modal-dialog(role='document')
    .modal-content.myModal
      .modal-header
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') Ã—
        h4.modal-title Add Book
      .modal-body
        .form-group
          label.col-sm-2.control-label Title
          .col-sm-10
            input.form-control(type='text', name='title' placeholder='Title')
        .form-group
          label.col-sm-2.control-label Author
          .col-sm-10
            input.form-control(type='text', name='author' placeholder='Author')
        .form-group
          label.col-sm-2.control-label Genre
          .col-sm-10
            input.form-control(type='text', name='genre' placeholder='Genre')
        .form-group
          label.col-sm-2.control-label Height
          .col-sm-10
            input.form-control(type='text', name='height' placeholder='Pages')
        .form-group
          label.col-sm-2.control-label Publisher
          .col-sm-10
            input.form-control(type='text', name='publisher' placeholder='Publisher')
      .modal-footer
        button.btn.btn-default.exit(type='button', data-dismiss='modal') Close
        button.btn.btn-primary.save(type='submit') Add Book
        
    .book-container 
    
      - var count = 0
      each book in books 
        if count < 11
          .book-item
            a(href='/books/' + book.id)
              .book-info
                p.label Title:
                p= book.title
              .book-info
                p.label Author:
                p= book.author 
              .book-info
                p.label Genre:
                p= book.genre
        - count ++
  .pages
    .title
    - var count = 1 
      a.previous(href=`/books/?page=${count - 1}` ) <
    while count < 11
      a(href=`/books/?page=${count}` ) #{count}
      - count++
    a.forward(href=`/books/?page=${count + 1}` ) >

include ./partials/footer           
  script(src='/main.js')
